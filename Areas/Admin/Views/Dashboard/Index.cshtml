@using WebThoiTrang.Areas.Admin.Models
@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>

    <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card-counter bg-primary text-white">
                <i class="fa fa-box float-left"></i>
                <span class="count-numbers">@Model.TotalProducts</span>
                <span class="count-name">Sản phẩm</span>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card-counter bg-success text-white">
                <i class="fa fa-shopping-cart float-left"></i>
                <span class="count-numbers">@Model.TotalOrders</span>
                <span class="count-name">Đơn hàng</span>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card-counter bg-warning text-white">
                <i class="fa fa-users float-left"></i>
                <span class="count-numbers">@Model.TotalUsers</span>
                <span class="count-name">Người dùng</span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Đơn hàng gần đây
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Mã đơn</th>
                                <th>Khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.RecentOrders)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.User.FullName</td>
                                    <td>@order.TotalAmount.ToString("N0") đ</td>
                                    <td>@order.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Top sản phẩm bán chạy
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng đã bán</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.TopSellingProducts)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td>@product.TotalQuantity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>