@model object
@{
    // Layout sẽ được xác định bởi _ViewStart.cshtml
    ViewData["Title"] = "Thêm mới";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm mới</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@ViewContext.RouteData.Values["Controller"]">@ViewContext.RouteData.Values["Controller"]</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Thông tin
        </div>
        <div class="card-body">
            <form method="post">
                @Html.AntiForgeryToken()

                @RenderBody()

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a href="/@ViewContext.RouteData.Values["Area"]/@ViewContext.RouteData.Values["Controller"]"
                       class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>